<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--驱动类名-->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <!--url-->
        <property name="hibernate.connection.url">jdbc:mysql:///ccc</property>
        <!--用户名-->
        <property name="hibernate.connection.username">root</property>
        <!--密码-->
        <property name="hibernate.connection.password">root</property>
        <!--<property name="hibernate.connection.provider_class">org.hibernate.c3p0.internal.StrategyRegistrationProviderImpl</property>-->
        <!--<property name="c3p0.min_size">1</property>&lt;!&ndash;在连接池中可用数据库连接的最小数目&ndash;&gt;-->
        <!--<property name="c3p0.max_size">30</property>&lt;!&ndash;在连接池中所有数据库连接的最大数目&ndash;&gt;-->
        <!--<property name="c3p0.time_out">1800</property>&lt;!&ndash;设定数据库连接的超时时间&ndash;&gt;-->
        <!--<property name="c3p0.max_statement">50</property>&lt;!&ndash;可以被缓存的PreparedStatement的最大数目&ndash;&gt;-->

        <property name="hibernate.connection.provider_class">org.hibernate.c3p0.internal.C3P0ConnectionProvider</property>
        <!--连接池以及缓存-->
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.min_size">1</property>
        <property name="hibernate.c3p0.timeout">5000</property>
        <property name="hibernate.c3p0.max_statements">100</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>
        <property name="hibernate.c3p0.acquire_increment">2</property>
        <property name="hibernate.c3p0.validate">true</property>
        <!--&lt;!&ndash;方言指定使用的数据库&ndash;&gt;-->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="format_sql">true</property>
        <!--指定配置文件-->
        <mapping resource="dqxx.hbm.xml"/>
        <mapping resource="fjgz.hbm.xml"/>
        <mapping resource="zyxx.hbm.xml"/>
        <mapping resource="bmxx.hbm.xml"/>
        <mapping resource="gys.hbm.xml"/>
        <mapping resource="softVer.hbm.xml"/>
        <mapping resource="softModel.hbm.xml"/>
        <mapping resource="enterprise.hbm.xml"/>
        <mapping resource="dwlx.hbm.xml"/>
        <mapping resource="khxx.hbm.xml"/>
        <mapping resource="khxx_soft.hbm.xml"/>
        <mapping resource="khxx_lxr.hbm.xml"/>
        <!--修改客户信息后保存的信息-->
        <mapping resource="khxx_oldInfo.hbm.xml"/>
        <mapping resource="khxx_soft_oldInfo.hbm.xml"/>
        <mapping resource="khxx_lxr_oldInfo.hbm.xml"/>
        <!--<mapping resource="whdj.hbm.xml"/>-->
        <!--<mapping resource="cwkpd.hbm.xml"/>-->
        <mapping resource="bills.hbm.xml"/>
        <mapping resource="user.hbm.xml"/>
        <mapping resource="authorization.hbm.xml"/>
        <mapping resource="role.hbm.xml"/>
        <mapping resource="CMS_RPT_WHRQ.hbm.xml"/>
        <mapping resource="CMS_RPT_DWYSK.hbm.xml"/>
    </session-factory>
</hibernate-configuration>